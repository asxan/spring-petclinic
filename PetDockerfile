FROM openjdk:alpine

LABEL maintainer="Vitalii Klymov" \
    name="Petclinic"

VOLUME /tmp

WORKDIR /tmp/petclinic

COPY *.jar petclinic.jar

EXPOSE 8080/tcp

EXPOSE 3306/tcp

ENTRYPOINT ["java","-Djava.security.egd=file:/dev/./urandom","-Dspring-boot.run.profiles=mysql","-jar","/tmp/petclinic/petclinic.jar"]
